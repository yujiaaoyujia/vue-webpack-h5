// 全局样式
@import './var'
@import './reset'

html,
body,
#app {
  height: 100%
}

body {
  margin: 0 auto
  font-family: PingFangSC-Regular, '微软雅黑', 'Microsoft YaHei', Helvetica, STHeiTi, Sans-serif
  line-height: 1.5
  font-size: 14px
  background: $silver
  color: $black
  -webkit-text-size-adjust: none
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0)
  outline: 0
  overflow-x: hidden
  /* -webkit-user-select: none */
  /* -webkit-overflow-scrolling: touch */
}

#app {
  position: relative
}


// ======================================================================
// 隐藏 vue 未编译的 Mustache 标签
[v-cloak],
.hidden {
  display: none
}

.v-link-active {
  color: $blue
}

// 隐藏元素
.vhidden {
  visibility: hidden
}

// 超出隐藏（防滚动）
.ohidden {
  overflow: hidden
}

// input-placeholder
input {
  &::-webkit-input-placeholder {
    color: $placeholder
  }
  &::-moz-placeholder {
    color: $placeholder
  }
  &:-moz-placeholder {
    color: $placeholder
  }
  &:-ms-input-placeholder {
    color: $placeholder
  }
}

// 过渡动画
// vue transitions
.fade-enter-active,
.fade-leave-active {
  transition: opacity 300ms
}
.fade-enter {
  opacity: 0
}
.fade-leave-active {
  display: none
}

.fade-all-enter-active,
.fade-all-leave-active {
  transition: opacity 300ms
}
.fade-all-enter,
.fade-all-leave-active {
  opacity: 0
}

.slide-enter-active,
.slide-leave-active {
  /*-webkit-transition: all 300ms*/
  transition: all 300ms
}
.slide-enter {
  -webkit-transform: translate3d(30px, 0, 0)
  transform: translateX(30px)
  opacity: 0
}
.slide-leave-active {
  display: none
}

.slide-all-enter-active,
.slide-all-leave-active {
  transition: all 300ms
}
.slide-all-enter,
.slide-all-leave-active {
  transform: translateX(30px)
  opacity: 0
  &.t-reverse {
    transform: translateX(-30px)
  }
}

.slide-up-enter-active,
.slide-up-leave-active,
.slide-down-enter-active,
.slide-down-leave-active {
  will-change: transform
  transition: all 300ms
}
.slide-up-enter,
.slide-up-leave-active {
  transform: translateY(100%)
}
.slide-down-enter,
.slide-down-leave-active {
  transform: translateY(-100%)
}
.bounce-enter-active {
  animation: bounce 300ms
}
.bounce-leave-enter,
.bounce-leave-active {
  display: none
}
.bounce-all-enter-active {
  animation: bounce 300ms
}
.bounce-all-leave-active {
  transition: all 200ms
}
.bounce-all-enter {
  transform: scale(1)
}
.bounce-all-leave-active {
  transform: scale(0)
  opacity: 0
}
@keyframes bounce {
  0% {transform: scale(0)}
  50% {transform: scale(1.2)}
  100% {transform: scale(1)}
}

.zoom-y-enter-active,
.zoom-y-leave-active {
  transition: all 300ms
  transform: scaleY(1.0)
  transform-origin: top
}
.zoom-y-enter,
.zoom-y-leave-active {
  transform: scaleY(0)
  opacity: 0
}

